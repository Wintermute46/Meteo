<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:padding="4dp"
    android:background="@drawable/widget_rounded">

    <TextView
        android:id="@+id/widget_city_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/start_margin"
        android:layout_marginTop="4dp"
        android:text="TextView"
        android:textAppearance="?android:attr/textAppearanceLarge"
        style="@style/LabelTextStyle" />

    <ImageView
        android:id="@+id/widget_icon"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignStart="@+id/widget_city_name"
        android:layout_below="@+id/widget_city_name"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/widget_currtemp"
        android:layout_width="wrap_content"
        android:layout_marginStart="@dimen/start_margin"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/widget_icon"
        android:layout_toEndOf="@+id/widget_icon"
        android:text="TextView"
        android:textAppearance="?android:attr/textAppearanceLarge"
        style="@style/LabelTextStyle" />

    <TextView
        android:id="@+id/widget_descr"
        style="@style/LabelTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/start_margin"
        android:layout_alignBottom="@+id/widget_icon"
        android:layout_toEndOf="@+id/widget_icon"
        android:text="TextView"
        android:textAppearance="?android:attr/textAppearanceMedium" />


</RelativeLayout>